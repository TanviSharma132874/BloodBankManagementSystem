<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Camp - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container py-4">
        <!-- Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h2 class="mb-1 text-danger">
                                    <i class="bi bi-plus-circle me-2"></i>
                                    Add New Blood Donation Camp
                                </h2>
                                <p class="text-muted mb-0">Create a new blood donation camp</p>
                            </div>
                            <div>
                                <a href="/admin/camps" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left me-1"></i>Back to Camps
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Add Camp Form -->
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-form me-2"></i>Camp Details
                        </h5>
                    </div>
                    <div class="card-body">
                        <form action="/admin/camps" method="POST">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="name" class="form-label">
                                        <i class="bi bi-calendar-event text-danger me-1"></i>
                                        Camp Name *
                                    </label>
                                    <input type="text" class="form-control" id="name" name="name" required
                                           placeholder="e.g., City Hospital Blood Drive">
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="location" class="form-label">
                                        <i class="bi bi-geo-alt text-danger me-1"></i>
                                        Location *
                                    </label>
                                    <input type="text" class="form-control" id="location" name="location" required
                                           placeholder="e.g., City Hospital, Main Street">
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="date" class="form-label">
                                        <i class="bi bi-calendar-date text-primary me-1"></i>
                                        Date *
                                    </label>
                                    <input type="date" class="form-control" id="date" name="date" required>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="time" class="form-label">
                                        <i class="bi bi-clock text-success me-1"></i>
                                        Time *
                                    </label>
                                    <input type="text" class="form-control" id="time" name="time" required
                                           placeholder="e.g., 9:00 AM - 4:00 PM">
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="organizer" class="form-label">
                                        <i class="bi bi-person-fill text-info me-1"></i>
                                        Organizer *
                                    </label>
                                    <input type="text" class="form-control" id="organizer" name="organizer" required
                                           placeholder="e.g., Red Cross Society">
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="contact" class="form-label">
                                        <i class="bi bi-telephone text-warning me-1"></i>
                                        Contact Number *
                                    </label>
                                    <input type="tel" class="form-control" id="contact" name="contact" required
                                           placeholder="e.g., +1-555-0123">
                                </div>

                                <div class="col-12 mb-4">
                                    <label for="description" class="form-label">
                                        <i class="bi bi-text-paragraph text-secondary me-1"></i>
                                        Description *
                                    </label>
                                    <textarea class="form-control" id="description" name="description" rows="4" required
                                              placeholder="Describe the camp purpose and any special information..."></textarea>
                                </div>
                            </div>

                            <div class="d-flex gap-2 justify-content-end">
                                <a href="/admin/camps" class="btn btn-secondary">
                                    <i class="bi bi-x-circle me-1"></i>Cancel
                                </a>
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-check-circle me-1"></i>Create Camp
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Set minimum date to today
        document.getElementById('date').min = new Date().toISOString().split('T')[0];
    </script>
</body>
</html>