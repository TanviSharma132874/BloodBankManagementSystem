<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blood Donation Camps - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container py-4">
        <!-- Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h2 class="mb-1 text-danger">
                                    <i class="bi bi-calendar-event me-2"></i>
                                    Blood Donation Camps
                                </h2>
                                <p class="text-muted mb-0">Manage upcoming blood donation camps</p>
                            </div>
                            <div>
                                <a href="/admin/camps/add" class="btn btn-danger me-2">
                                    <i class="bi bi-plus-circle me-1"></i>Add New Camp
                                </a>
                                <a href="/adminDashboard" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left me-1"></i>Back to Dashboard
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Camps Table -->
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-list-ul me-2"></i>
                            All Camps (<%= camps.length %>)
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <% if (camps.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Camp Name</th>
                                        <th>Location</th>
                                        <th>Date</th>
                                        <th>Time</th>
                                        <th>Organizer</th>
                                        <th>Contact</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% camps.forEach(camp => { %>
                                    <tr>
                                        <td>
                                            <strong class="text-danger"><%= camp.name %></strong>
                                        </td>
                                        <td>
                                            <i class="bi bi-geo-alt text-danger me-1"></i>
                                            <%= camp.location %>
                                        </td>
                                        <td>
                                            <i class="bi bi-calendar-date text-primary me-1"></i>
                                            <%= camp.date.toDateString() %>
                                        </td>
                                        <td>
                                            <i class="bi bi-clock text-success me-1"></i>
                                            <%= camp.time %>
                                        </td>
                                        <td>
                                            <i class="bi bi-person-fill text-info me-1"></i>
                                            <%= camp.organizer %>
                                        </td>
                                        <td>
                                            <i class="bi bi-telephone text-warning me-1"></i>
                                            <%= camp.contact %>
                                        </td>
                                        <td>
                                            <% if (camp.status === 'upcoming') { %>
                                                <span class="badge bg-success">Upcoming</span>
                                            <% } else if (camp.status === 'completed') { %>
                                                <span class="badge bg-secondary">Completed</span>
                                            <% } else { %>
                                                <span class="badge bg-danger">Cancelled</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <form method="POST" action="/admin/camps/<%= camp._id %>/delete" class="d-inline" 
                                                  onsubmit="return confirm('Are you sure you want to delete this camp?')">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                        <% } else { %>
                        <div class="text-center py-5">
                            <i class="bi bi-calendar-x text-muted mb-3" style="font-size: 4rem;"></i>
                            <h4 class="text-muted">No Camps Found</h4>
                            <p class="text-muted">There are currently no camps in the system.</p>
                            <a href="/admin/camps/add" class="btn btn-danger">
                                <i class="bi bi-plus-circle me-1"></i>Add First Camp
                            </a>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>