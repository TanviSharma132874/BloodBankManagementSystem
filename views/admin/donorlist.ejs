<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Donor Management - Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        body {
            background: linear-gradient(135deg, #f1faee 0%, #e63946 100%);
            min-height: 100vh;
            position: relative;
            overflow-x: hidden;
        }
        
        /* Animated background patterns */
        .bg-patterns {
            position: absolute;
            top: 0; left: 0; width: 100%; height: 100%;
            pointer-events: none; z-index: 0;
        }
        
        .pattern {
            position: absolute;
            border-radius: 50%;
            background: rgba(230, 57, 70, 0.08);
            animation: patternFloat 8s ease-in-out infinite;
        }
        
        .pattern:nth-child(1) { width: 120px; height: 120px; top: 15%; left: 85%; animation-delay: 0s; }
        .pattern:nth-child(2) { width: 80px; height: 80px; top: 70%; left: 10%; animation-delay: 3s; }
        .pattern:nth-child(3) { width: 100px; height: 100px; top: 45%; left: 90%; animation-delay: 6s; }
        
        @keyframes patternFloat {
            0%, 100% { transform: translate(0, 0) rotate(0deg); opacity: 0.4; }
            50% { transform: translate(-30px, -30px) rotate(180deg); opacity: 0.8; }
        }
        
        .container {
            position: relative;
            z-index: 1;
        }
        
        /* Header Section */
        .header-section {
            background: linear-gradient(135deg, #e63946 0%, #f1faee 100%);
            border-radius: 25px;
            box-shadow: 0 15px 35px rgba(230, 57, 70, 0.2);
            padding: 40px;
            margin-bottom: 30px;
            color: white;
            position: relative;
            overflow: hidden;
        }
        
        .header-section::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -20%;
            width: 40%;
            height: 200%;
            background: url('/images/blood-donation.png') no-repeat center;
            background-size: 150px;
            opacity: 0.1;
            animation: headerRotate 25s linear infinite;
        }
        
        @keyframes headerRotate {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }
        
        .header-content {
            position: relative;
            z-index: 2;
        }
        
        .page-title {
            font-size: 2.8rem;
            font-weight: bold;
            margin-bottom: 15px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
        }
        
        .page-subtitle {
            font-size: 1.2rem;
            opacity: 0.9;
            margin-bottom: 0;
        }
        
        /* Stats Cards */
        .stats-row {
            margin: 30px 0;
        }
        
        .stat-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 25px;
            text-align: center;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            border-left: 5px solid #e63946;
        }
        
        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(230, 57, 70, 0.2);
        }
        
        .stat-number {
            font-size: 2.5rem;
            font-weight: bold;
            color: #e63946;
            display: block;
            animation: countUp 2s ease-out;
        }
        
        @keyframes countUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .stat-label {
            color: #6c757d;
            font-weight: 500;
            margin-top: 5px;
        }
        
        /* Search and Filter Section */
        .search-section {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(15px);
            border-radius: 20px;
            padding: 25px;
            margin-bottom: 30px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }
        
        .search-input {
            border: 2px solid rgba(230, 57, 70, 0.1);
            border-radius: 15px;
            padding: 12px 20px;
            font-size: 1rem;
            transition: all 0.3s ease;
        }
        
        .search-input:focus {
            border-color: #e63946;
            box-shadow: 0 0 0 0.2rem rgba(230, 57, 70, 0.15);
        }
        
        .filter-btn {
            border-radius: 12px;
            padding: 10px 20px;
            font-weight: 500;
            transition: all 0.3s ease;
        }
        
        /* Donor Cards Grid */
        .donors-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 25px;
            margin-top: 20px;
        }
        
        .donor-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(15px);
            border-radius: 20px;
            padding: 25px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            border: 1px solid rgba(230, 57, 70, 0.1);
            position: relative;
            overflow: hidden;
        }
        
        .donor-card::before {
            content: '';
            position: absolute;
            top: 0; left: 0; right: 0;
            height: 4px;
            background: linear-gradient(90deg, #e63946, #dc3545);
        }
        
        .donor-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 40px rgba(230, 57, 70, 0.15);
        }
        
        .donor-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 20px;
        }
        
        .donor-avatar {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: linear-gradient(135deg, #e63946, #dc3545);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
            font-weight: bold;
            box-shadow: 0 5px 15px rgba(230, 57, 70, 0.3);
        }
        
        .donor-name {
            font-size: 1.3rem;
            font-weight: bold;
            color: #333;
            margin: 0;
        }
        
        .donor-gender {
            color: #6c757d;
            font-size: 0.9rem;
        }
        
        .blood-group-badge {
            background: linear-gradient(135deg, #e63946, #dc3545);
            color: white;
            padding: 8px 16px;
            border-radius: 20px;
            font-weight: bold;
            font-size: 1.1rem;
            box-shadow: 0 3px 10px rgba(230, 57, 70, 0.3);
        }
        
        .donor-info {
            margin: 15px 0;
        }
        
        .info-item {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
            padding: 8px 0;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        }
        
        .info-icon {
            width: 35px;
            color: #e63946;
            font-size: 1.1rem;
        }
        
        .info-text {
            color: #495057;
            font-weight: 500;
        }
        
        .donation-date {
            background: rgba(230, 57, 70, 0.1);
            border-radius: 12px;
            padding: 12px;
            text-align: center;
            margin-top: 15px;
            border-left: 4px solid #e63946;
        }
        
        .date-label {
            color: #6c757d;
            font-size: 0.9rem;
            margin-bottom: 5px;
        }
        
        .date-value {
            color: #e63946;
            font-weight: bold;
            font-size: 1rem;
        }
        
        /* Contact Actions */
        .contact-actions {
            display: flex;
            gap: 10px;
            margin-top: 15px;
        }
        
        .action-btn {
            flex: 1;
            border-radius: 12px;
            padding: 8px 12px;
            font-size: 0.9rem;
            font-weight: 500;
            transition: all 0.3s ease;
            border: none;
        }
        
        .btn-call {
            background: linear-gradient(135deg, #28a745, #20c997);
            color: white;
        }
        
        .btn-call:hover {
            background: linear-gradient(135deg, #20c997, #28a745);
            transform: scale(1.02);
        }
        
        .btn-email {
            background: linear-gradient(135deg, #17a2b8, #6f42c1);
            color: white;
        }
        
        .btn-email:hover {
            background: linear-gradient(135deg, #6f42c1, #17a2b8);
            transform: scale(1.02);
        }
        
        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #6c757d;
        }
        
        .empty-icon {
            font-size: 4rem;
            color: #e63946;
            margin-bottom: 20px;
        }
        
        /* Responsive Design */
        @media (max-width: 768px) {
            .donors-grid {
                grid-template-columns: 1fr;
                gap: 20px;
            }
            
            .donor-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 15px;
            }
            
            .blood-group-badge {
                align-self: flex-start;
            }
        }
    </style>
</head>
<body>
    <!-- Background Patterns -->
    <div class="bg-patterns">
        <div class="pattern"></div>
        <div class="pattern"></div>
        <div class="pattern"></div>
    </div>

    <div class="container py-4">
        <!-- Header Section -->
        <div class="header-section">
            <div class="header-content">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h1 class="page-title">
                            <i class="bi bi-people-fill me-3"></i>
                            Donor Management
                        </h1>
                        <p class="page-subtitle">Manage and track all registered blood donors</p>
                    </div>
                    <div class="col-md-4 text-end">
                        <img src="/images/heart-img.png" alt="Heart" class="img-fluid" style="max-height: 100px; filter: brightness(0) invert(1);">
                    </div>
                </div>
            </div>
        </div>

        <!-- Stats Section -->
        <div class="row stats-row">
            <div class="col-md-3 mb-3">
                <div class="stat-card">
                    <i class="bi bi-people-fill text-primary fs-2 mb-2"></i>
                    <div class="stat-number"><%= donors.length %></div>
                    <div class="stat-label">Total Donors</div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="stat-card">
                    <i class="bi bi-gender-ambiguous text-success fs-2 mb-2"></i>
                    <div class="stat-number"><%= donors.filter(d => d.gender === 'Male').length %></div>
                    <div class="stat-label">Male Donors</div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="stat-card">
                    <i class="bi bi-gender-female text-danger fs-2 mb-2"></i>
                    <div class="stat-number"><%= donors.filter(d => d.gender === 'Female').length %></div>
                    <div class="stat-label">Female Donors</div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="stat-card">
                    <i class="bi bi-calendar-check text-warning fs-2 mb-2"></i>
                    <div class="stat-number"><%= donors.filter(d => new Date(d.donatedAT) > new Date(Date.now() - 30*24*60*60*1000)).length %></div>
                    <div class="stat-label">Recent Donors</div>
                </div>
            </div>
        </div>

        <!-- Search and Filter Section -->
        <div class="search-section">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text" class="form-control search-input" placeholder="Search donors by name, blood group, or contact..." id="searchInput">
                    </div>
                </div>
                <div class="col-md-6 mt-3 mt-md-0">
                    <div class="d-flex gap-2 justify-content-md-end">
                        <button class="btn btn-outline-primary filter-btn" onclick="filterByBloodGroup('all')">All</button>
                        <button class="btn btn-outline-danger filter-btn" onclick="filterByBloodGroup('O+')">O+</button>
                        <button class="btn btn-outline-success filter-btn" onclick="filterByBloodGroup('A+')">A+</button>
                        <button class="btn btn-outline-warning filter-btn" onclick="filterByBloodGroup('B+')">B+</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Donors Grid -->
        <% if (donors.length > 0) { %>
        <div class="donors-grid">
            <% donors.forEach(function(donor) { %>
            <div class="donor-card" data-name="<%= donor.name.toLowerCase() %>" data-blood="<%= donor.bloodGroup %>" data-contact="<%= donor.contact %>">
                <div class="donor-header">
                    <div class="d-flex align-items-center">
                        <div class="donor-avatar">
                            <%= donor.name.charAt(0).toUpperCase() %>
                        </div>
                        <div class="ms-3">
                            <h5 class="donor-name"><%= donor.name %></h5>
                            <div class="donor-gender">
                                <i class="bi bi-person-fill me-1"></i>
                                <%= donor.gender %>, <%= donor.age %> years
                            </div>
                        </div>
                    </div>
                    <div class="blood-group-badge">
                        <i class="bi bi-droplet-fill me-1"></i>
                        <%= donor.bloodGroup %>
                    </div>
                </div>
                
                <div class="donor-info">
                    <div class="info-item">
                        <div class="info-icon">
                            <i class="bi bi-telephone-fill"></i>
                        </div>
                        <div class="info-text"><%= donor.contact %></div>
                    </div>
                    
                    <div class="info-item">
                        <div class="info-icon">
                            <i class="bi bi-envelope-fill"></i>
                        </div>
                        <div class="info-text"><%= donor.email %></div>
                    </div>
                    
                    <div class="info-item">
                        <div class="info-icon">
                            <i class="bi bi-geo-alt-fill"></i>
                        </div>
                        <div class="info-text"><%= donor.address %></div>
                    </div>
                </div>
                
                <div class="donation-date">
                    <div class="date-label">
                        <i class="bi bi-calendar-heart me-1"></i>
                        Last Donation
                    </div>
                    <div class="date-value"><%= donor.donatedAT.toDateString() %></div>
                </div>
                
                <div class="contact-actions">
                    <button class="action-btn btn-call" onclick="callDonor('<%= donor.contact %>')">
                        <i class="bi bi-telephone me-1"></i>Call
                    </button>
                    <button class="action-btn btn-email" onclick="emailDonor('<%= donor.email %>')">
                        <i class="bi bi-envelope me-1"></i>Email
                    </button>
                </div>
            </div>
            <% }) %>
        </div>
        <% } else { %>
        <div class="empty-state">
            <div class="empty-icon">
                <i class="bi bi-people"></i>
            </div>
            <h4>No Donors Found</h4>
            <p>There are currently no registered donors in the system.</p>
        </div>
        <% } %>
    </div>

    <script>
        // Search functionality
        document.getElementById('searchInput').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const cards = document.querySelectorAll('.donor-card');
            
            cards.forEach(card => {
                const name = card.dataset.name;
                const blood = card.dataset.blood.toLowerCase();
                const contact = card.dataset.contact;
                
                if (name.includes(searchTerm) || blood.includes(searchTerm) || contact.includes(searchTerm)) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        });
        
        // Filter by blood group
        function filterByBloodGroup(bloodGroup) {
            const cards = document.querySelectorAll('.donor-card');
            
            cards.forEach(card => {
                if (bloodGroup === 'all' || card.dataset.blood === bloodGroup) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        }
        
        // Contact actions
        function callDonor(phone) {
            window.open('tel:' + phone);
        }
        
        function emailDonor(email) {
            window.open('mailto:' + email);
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
