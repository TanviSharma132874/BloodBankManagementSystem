<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pending Blood Requests</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container py-5">
        <div class="card shadow-lg mb-4 border-0" style="background: linear-gradient(120deg, #f1faee 60%, #e63946 100%);">
            <div class="card-body">
                <div class="d-flex align-items-center mb-4">
                    <img src="/images/blood-donation.png" alt="Blood donation symbol with a red drop and hands reaching out, set against a clean background suggesting hope and care, no visible text, conveys a supportive and compassionate atmosphere" class="img-fluid rounded-4 me-3" style="max-height:60px;">
                    <h2 class="fw-bold" style="color:#e63946;">Pending Blood Requests</h2>
                </div>
                <% if (typeof message !== 'undefined' && message) { %>
                    <div class="alert alert-info text-center"><%= message %></div>
                <% } %>
                <div class="table-responsive">
                    <table class="table table-bordered table-hover align-middle">
                        <thead class="table-danger">
                            <tr>
                                <th>Name</th>
                                <th>Blood Group</th>
                                <th>Units Needed</th>
                                <th>Contact</th>
                                <th>Hospital</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% requests.forEach(function(request) { %>
                            <tr>
                                <td><%= request.name %></td>
                                <td><span class="badge bg-danger"><%= request.bloodGroupNeeded %></span></td>
                                <td><%= request.unitsNeeded %></td>
                                <td><%= request.contact %></td>
                                <td><%= request.hospital %></td>
                                <td>
                                    <form action="/admin/requests/<%= request._id %>/approve" method="POST" style="display:inline-block;">
                                        <button type="submit" class="btn btn-success btn-sm"><i class="bi bi-check-circle"></i> Approve</button>
                                    </form>
                                    <form action="/admin/requests/<%= request._id %>/reject" method="POST" style="display:inline-block;">
                                        <button type="submit" class="btn btn-danger btn-sm"><i class="bi bi-x-circle"></i> Reject</button>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
